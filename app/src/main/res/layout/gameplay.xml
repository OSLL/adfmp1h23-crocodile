<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="10dp" />

    <ImageButton
        android:id="@+id/settings"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icona_settings"

        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/right_guideLine"
        app:layout_constraintLeft_toRightOf="@+id/book"

        app:layout_constraintRight_toRightOf="@+id/right_guideLine"
        app:layout_constraintTop_toTopOf="@+id/top_guideLine"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/book"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"

        android:src="@drawable/book"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/player1_gameOnline"
        app:layout_constraintLeft_toLeftOf="@id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@id/settings"
        app:layout_constraintStart_toStartOf="@id/left_guideLine"
        app:layout_constraintTop_toTopOf="@id/top_guideLine"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_word"
        android:layout_width="296dp"
        android:layout_height="73dp"
        android:layout_marginStart="32dp"
        android:background="#B0C4FD"

        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:shadowColor="#573434"
        android:text="word"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl"
        android:textSize="44sp"
        android:textStyle="bold|italic"
        android:typeface="sans"

        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/top_guideLine"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideLine"
        />

    <TextView
        android:id="@+id/tips_of_word"
        android:layout_width="307dp"
        android:layout_height="141dp"
        android:background="#FFFFFF"
        android:text="Hello, Friend!!!"

        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideLine"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"

        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/main_word"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/player1_timer"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:text=""

        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0041B6"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/player2_timer"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/player1Tablo"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/player2_timer"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:text=""

        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0041B6"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/main_word"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/player2Tablo"
        app:layout_constraintTop_toBottomOf="@+id/player1_timer"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/skip_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#B0C4FD "
        android:backgroundTintMode="src_over"
        android:text="skip"

        android:textAlignment="center"
        android:textColorHighlight="#4DC852"
        android:textColorLink="#4DC652"

        android:textSize="25sp"
        android:textStyle="normal|bold|italic"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@+id/bottom_guideLine"
        app:layout_constraintEnd_toStartOf="@+id/start"

        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintLeft_toRightOf="@+id/right_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/start"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/tips_of_word"
        app:layout_constraintVertical_bias="0.69" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:backgroundTint="#78CD7B"

        android:text="start"

        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideLine"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@id/right_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/tips_of_word"
        app:layout_constraintVertical_bias="0.69" />

    <Button
        android:id="@+id/next_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5EBF63"
        android:backgroundTintMode="src_over"
        android:text="CROCO"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic"

        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideLine"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintLeft_toRightOf="@+id/skip_button"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/tips_of_word"
        app:layout_constraintVertical_bias="0.69" />

    <TextView
        android:id="@+id/player1Tablo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER1: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0B30B5"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/player2Tablo"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/book" />

    <TextView
        android:id="@+id/player2Tablo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER2: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0B30B5"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/main_word"
        app:layout_constraintEnd_toStartOf="@+id/right_guideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"

        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/player1Tablo"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/player1_gameOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/player1Tablo"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"/>

    <TextView
        android:id="@+id/player2_gameOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:text="Playing"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/player2Tablo"
        app:layout_constraintLeft_toRightOf="@+id/left_guideLine"
        app:layout_constraintRight_toLeftOf="@+id/right_guideLine"
        app:layout_constraintStart_toStartOf="@+id/left_guideLine"
        app:layout_constraintTop_toBottomOf="@+id/player1Tablo"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>